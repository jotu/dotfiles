[tasks."ssh:agent:restart"]
alias = "sar"
description = "Restart ssh agent"
run = '''
  eval $(ssh-agent -s)
{{- if .work.enable }}
  ssh-add ~/.ssh/{{ .work.ssh.user.identityFile }}
  ssh-add ~/.ssh/{{ .work.ssh.organization.identityFile }}
{{- end }}
  ssh-add ~/.ssh/{{ .personal.ssh.identityFile }}
'''

[tools]
node = "22"
"npm:bash-language-server" = "latest"
"npm:opencode-ai"= "latest"
"npm:yaml-language-server" = "latest"
shellcheck = "latest"
shellspec = "latest"
shfmt = "latest"
