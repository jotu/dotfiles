{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "agents": {
    "sisyphus": {
      "model": "github-copilot/claude-opus-4.6",
      "prompt_append": "Session bootstrap reminder: for fresh tasks, suggest `/new-task <task_request>` to load repo context and validation scope before implementation."
    },
    "plan": {
      "model": "github-copilot/claude-sonnet-4.6"
    },
    "build": {
      "model": "github-copilot/gpt-5.2-codex"
    },
    "oracle": {
      "model": "github-copilot/claude-sonnet-4.6"
    },
    "explore": {
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "librarian": {
      "model": "github-copilot/claude-haiku-4.5"
    },
    "frontend-ui-ux-engineer": {
      "model": "github-copilot/gemini-3.1-pro-preview"
    },
    "document-writer": {
      "model": "github-copilot/claude-sonnet-4.6"
    },
    "multimodal-looker": {
      "model": "github-copilot/gemini-3.1-pro-preview"
    }
  },
  "categories": {
    "ultrabrain": {
      "model": "github-copilot/claude-opus-4.6",
      "reasoningEffort": "xhigh",
      "textVerbosity": "medium",
      "description": "Deep architecture and complex reasoning (Codex)."
    },
    "deep": {
      "model": "github-copilot/gpt-5.2-codex",
      "reasoningEffort": "high",
      "textVerbosity": "medium",
      "description": "Implementation-oriented deep work / multi-step coding (Codex)."
    },
    "quick": {
      "model": "github-copilot/claude-haiku-4.5",
      "reasoningEffort": "low",
      "textVerbosity": "low",
      "description": "Small fixes, quick edits, straightforward changes."
    },
    "unspecified-low": {
      "model": "github-copilot/claude-sonnet-4.5",
      "reasoningEffort": "medium",
      "textVerbosity": "medium",
      "description": "General-purpose default when no other category fits."
    },
    "visual-engineering": {
      "model": "github-copilot/gemini-3.1-pro-preview",
      "reasoningEffort": "medium",
      "textVerbosity": "high",
      "description": "UI/UX, styling, visual consistency, frontend design reviews."
    },
    "documentation": {
      "model": "github-copilot/claude-sonnet-4.6",
      "reasoningEffort": "medium",
      "textVerbosity": "high",
      "description": "Docs, ADRs, release notes, README updates, and writing tasks."
    },
    "librarian": {
      "model": "github-copilot/claude-haiku-4.5",
      "reasoningEffort": "medium",
      "textVerbosity": "high",
      "description": "Codebase exploration + explaining findings with citations/paths."
    },
    "multimodal": {
      "model": "github-copilot/gemini-3.1-pro-preview",
      "reasoningEffort": "medium",
      "textVerbosity": "high",
      "description": "Image + UI screenshot analysis, visual debugging, multimodal review."
    }
  }
}
